<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_95px"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    
    <!-- 返回 -->
    <RelativeLayout
        android:id="@+id/back"
        android:layout_width="@dimen/dd_dimen_84px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/back_image" />
    </RelativeLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dd_dimen_40px" />
    
	<TextView
        android:id="@+id/right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dd_dimen_30px"
        android:visibility="gone" />

    <!-- 下划线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:layout_alignParentBottom="true"
        android:background="@color/cut_off_line_title" />

</RelativeLayout>